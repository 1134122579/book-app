/* pages/bookdetail/bookdetail.wxss */
.book {
  background: #F5F5F5;
  box-sizing: border-box;
  padding-bottom: 150rpx;
}

.bookheader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 280rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.cover {
  background: cadetblue;
  width: 180rpx;
  height: 260rpx;
  border-radius: 8rpx;
}

.bookblock {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
  padding: 20rpx;
  height: 100%;
}

.book_title {
  font-size: 28rpx;
  font-weight: 600;

}

.bookrate {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
  font-size: 24rpx;
}

/* 分类 */
.type {
  margin-top: 10rpx;
}

.booktexrdesc {
  margin-top: 10rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 20rpx 40rpx;

}

.textcontent {
  background: #F5F5F5;
  padding: 20rpx 0 0 20rpx;
  font-weight: 600;
  font-size: 26rpx;
}

.textcontentdesc {
  background: #F5F5F5;
  padding: 20rpx;
  font-size: 24rpx;
  min-height: 120rpx;
  max-height: 240rpx;
  overflow-y: auto;
}

.actioiconn {
  width: 140rpx;
}

/* 书本评论 */
.comment {
  background: #fff;
  padding: 20rpx;
  margin-top: 10rpx;
}

.comment_title {
  font-size: 26rpx;
  font-weight: 600;
  padding: 10rpx 0;
  border-bottom: 1px solid #F5F5F5;

}

.commentBlock {
  padding: 20rpx 0;
  font-size: 24rpx;
}

.comment_header {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-bottom: 20rpx;
}

.header_image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  background: chartreuse;

}

.user_name {
  margin: 0 20rpx;
  font-weight: 600;
}

.comment-content {
  padding: 20rpx;
}

.comment-time {
  color: #ccc;
}