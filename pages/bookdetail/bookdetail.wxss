      /* pages/bookdetail/bookdetail.wxss */
.book {
  background: #F5F5F5;
  box-sizing: border-box;
  padding-bottom: 92rpx;
}
.bookheader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 280rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}

.cover {
  width: 180rpx;
  height: 260rpx;
  border-radius: 8rpx;
}

.bookblock {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
  padding: 20rpx;
  height: 100%;
}

.book_title {
  font-size: 28rpx;
  font-weight: 600;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;

}

.bookrate {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  box-sizing: border-box;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.sale_price{
  font-size: 28rpx;
  color: #ff0000;
}

/* 分类 */
.type {
  /* margin-top: 10rpx; */
}

.booktexrdesc {
  margin-top: 20rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}

.textcontent {
  background: #F5F5F5;
  padding: 20rpx 0 0 20rpx;
  font-weight: 600;
  font-size: 26rpx;
}

.textcontentdesc {
  background: #F5F5F5;
  padding: 20rpx;
  font-size: 24rpx;
  min-height: 120rpx;
  max-height: 240rpx;
  overflow-y: auto;
}

.actioiconn {
  width: 110rpx;
}

/* 书本评论 */
.comment {
  background: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
}

.comment_title {
  font-size: 26rpx;
  font-weight: 600;
  padding: 10rpx 0;
  border-bottom: 1px solid #F5F5F5;

}

.commentBlock {
  padding: 20rpx 0;
  font-size: 24rpx;
}

.comment_header {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-bottom: 20rpx;
}

.header_image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user_name {
  margin: 0 20rpx;
  font-weight: 600;
}
.comment-text{
  font-size: 24rpx;
  line-height: 1.5;
  letter-spacing: 2rpx;
}
.comment-content {
  padding:0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.comment-like{
  padding: 0 10rpx;
}

.comment-time {
  color: #ccc;
  padding:10rpx 20rpx;
}
.now_chunk_one{
  padding-right:10rpx;
}
.comment-poup{
  width: 80vw;
  padding-top: 16rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.pushcomment{
  text-align: center;
  width: 100%;
  font-size: 28rpx;
  padding: 10rpx ;
  box-sizing: border-box;
}
.pushbutton{
  width: 80%;
  /* height: 60rpx; */
  background: #F7DA65;
  color: #fff;
  margin: 10px auto;
  border-radius: 60rpx;
  text-indent: 10rpx;
  letter-spacing: 10rpx;
}

