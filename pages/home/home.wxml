<!-- 首页 -->
<van-transition duration="400" show="{{ active=='home' }}" name="fade" custom-class="block">
  <HomePage HotBookList="{{HotBookList}}" NewBookList="{{NewBookList}}"/>
</van-transition>
<!-- 借阅 -->
<van-transition duration="400" show="{{ active=='class' }}" name="fade" custom-class="block">
  <bookclass />
</van-transition>
<!-- 订单 -->
<van-transition duration="400" show="{{ active=='order' }}" name="fade" custom-class="block">
  <!-- <order /> -->
  <view class="bookorderlist modelblock">
    <van-tabs active="{{ listQuery.status }}" id="tabs" sticky ellipsis="{{false}}" >
      <van-tab title="{{item.name}}" wx:for="{{ordertypelist}}" name="{{item.id}}">
        <!-- 列表 -->
        <view class="orderlist">
          <block wx:for="{{10}}" class="">
          <BookModel book="item" />
        </block>
        </view>
      </van-tab>
    </van-tabs>
    <!-- 列表 -->
    <view>
    </view>
  </view>
</van-transition>
<!-- 个人中心 -->
<van-transition duration="400" show="{{ active=='friends' }}" name="fade" custom-class="block">
  <morepage />
</van-transition>



<view>
  <van-tabbar active="{{ active }}" bind:change="onChange" active-color="#ED6925">
    <van-tabbar-item name="{{item.to}}" icon="{{active==item.to?item.active_icon:item.icon}}" wx:for="{{tabbarList}}" wx:key="id">{{item.name}}</van-tabbar-item>
  </van-tabbar>
</view>