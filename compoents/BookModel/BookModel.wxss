
.nowchunk {
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 14rpx #d8d8d8;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  margin-top: 80rpx;
  height: 280rpx;
  padding: 0 30rpx;
}

.now_imagestyle {
  /* margin-left: 30rpx; */
  margin-top: -40rpx;
  height: 280rpx;
  overflow: hidden;
  border-radius: 8rpx;
  width: 180rpx;
}
.now_imagestyle .image{
  width: 100%;
  height: 100%;
}

.textStyle {
  font-size: 28rpx;
  flex: 1;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-direction: column;
  height: 100%;
  padding: 20rpx 0 30rpx 20rpx;
}

.now_chunk_title {
  /* font-weight: 600; */
