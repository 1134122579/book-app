/* compoents/HomePage/HomePage.wxss */
page {
  background: #F7F7F7;
}
.home{
  padding-bottom: 120rpx;
  box-sizing: border-box;
}
/* 搜索 */
.scan {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  font-weight: 600;
}

/* 分类样式 */
.modelBlock {
  box-sizing: border-box;
  padding: 20rpx 34rpx;
  background: #fff;
}

.type_style {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.type_title {
  font-size: 30rpx;
  font-weight: 600;
}

.moreStyle {
  font-size: 26rpx;
  color: #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 最新上架 */
.type_list {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: nowrap;
  padding: 18rpx 0;
  overflow-x: auto;
}

.chunk {
  width: 210rpx;
  font-size: 26rpx;
  margin-right: 10rpx;
  flex-shrink: 0;
  line-height: 1.5;
  text-align: left;
}

.imagestyle {
  width: 100%;
  min-height: 260rpx;
  max-height: 280rpx;
  background: "#8A8A8A";
  border-radius: 8rpx;
  overflow: hidden;
}

.chunk_title {
  font-weight: 600;
  margin-top: 10rpx;
  width: 100%;
}

.chunk_desc {
  font-size: 20rpx;
  color: #ccc;
  width: 100%;
}

.now_imagestyle {
  width: 280rpx;
  min-height: 260rpx;
  max-height: 280rpx;
  overflow: hidden;
}

/* 热门书籍 */
.now_list {
  padding: 20rpx 0;
  box-sizing: border-box;
}