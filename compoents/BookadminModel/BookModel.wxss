page {}

.nowchunk {
  background: #fff;
  border-radius: 10rpx;
  /* box-shadow: 0 0 10rpx #ccc; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  height: 260rpx;
  border-bottom: 1px solid #fafafa;
}

.textStyle_top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-direction: column;
  height: 100%;
}

.price {
  color: #ff0000;
}

.shelf_name {
  color: #ff0000;
}

.now_imagestyle {
  overflow: hidden;
  border-radius: 8rpx;
  width: 180rpx;
  height: 100%;
}

.now_imagestyle .image {
  width: 100%;
  height: 100%;
}

.textStyle {
  font-size: 28rpx;
  flex: 1;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-direction: column;
  height: 100%;
  padding: 0 20rpx;
  /* height: 260rpx; */
}

.now_chunk_title {
  /* font-weight: 600; */
  font-size: 32rpx;
}

.now_chunk_desc {
  color: #ccc;
  font-size: 28rpx;
  margin-top: 10rpx;
}

/* 书本记录 */
.now_chunk_ {
  color: #ccc;
  font-size: 24rpx;
}

.now_chunk_one {
  margin-right: 10rpx;
}

.button {
  width: 100rpx;
  border-radius: 60rpx;
  background: #ED6925;
  color: #fff;
  text-align: center;
  padding: 10rpx 0;
  font-size: 24rpx;
}